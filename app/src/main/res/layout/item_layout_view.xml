            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$ $ $"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
       <LinearLayout
